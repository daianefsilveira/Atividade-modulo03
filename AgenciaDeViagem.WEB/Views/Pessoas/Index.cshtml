@model IEnumerable<AgenciaDeViagem.DATA.Models.Pessoas>

@{
    ViewData["Title"] = "Index";
}

<h1>Bem-vindo(a) à nossa Agência de viagens</h1>
    <h4>Estamos realizando um sorteio de passagens aéreas</h4>
    <h4>Clique no botão abaixo para realizar o seu cadastro</h4>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdPessoas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdPessoas)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success m-1" asp-route-id="@item.CódPessoa">Alterar</a>
                <a asp-action="Details" class="btn btn-primary m-1" asp-route-id="@item.CódPessoa">Detalhes</a>

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#DeleteModal-@item.CódPessoa">
                    Excluir
                </button>

                <!-- Modal -->
                <div class="modal fade" id="DeleteModal-@item.CódPessoa" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="DeleteModalLabel">Excluir cadastro</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Deseja realmenre excluir @item.Nome ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CódPessoa">Sim</a>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
